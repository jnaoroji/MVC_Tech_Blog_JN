<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit your Blog Post</h3>

    <form class="form edit-project-form">
      <div class="form-group">
        <label for="project-name">Blog Title </label>
        <input required class="form-input" type="text" id="project-name" name="project-name" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc">description</label>
        <textarea required class="form-input" id="project-desc" name="project-desc">{{post.description}}</textarea>
      </div>
      <div class="form-group flex flex-col sm:flex-row">
        <button type="submit" class="rounded-md bg-emerald-700 p-4 py-2 text-neutral-50 mr-2" id="post-button">Update Post</button>
        <button type="submit" class="rounded-md bg-emerald-700 p-4 py-2 text-neutral-50" id="delete-button" >Delete</button>
        <a href="/profile" class="text-center block rounded-md p-4 py-2" id="cancel-button">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/profile.js"></script>
<script src="./js/edit-post.js"></script>
