<section class="text-center">
  <div class="container my-5 py-5">
  <h2 class="text-primary">{{title}}</h2>
  <p>{{description}}</p>
  <p class="text-link">Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
</section>
{{!-- create comment form --}}
<section class="text-center">
<div id="comment-container" style="flex">
  <div class="comment">
    <label for="comment-container">Leave a Comment!</label>
    <input class="input" type="text" id="comment-desc"/>
   <button class="btn btn-sm btn-primary" id="comment-button" data-id={{id}}>Submit</button>
  </div>
</div>
<div id ="comment-element" class="d-flex justify-content-between align-items-center mb-3 mt-4">
  {{#if comments}}
  {{#each comments}}
  <h6 class="text-link fw-bold mb-0">
    By: {{user.name}} 
    <span class="text-dark ms-2">{{description}}</span>
    on {{format_date date_created}}
  </h6>
  {{/each}}
  {{/if}}
</div>
</section>

<script src="/js/comment.js"></script>
